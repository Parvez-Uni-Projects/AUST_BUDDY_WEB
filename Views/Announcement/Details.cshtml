@{ ViewBag.Title = "Announcement"; }

<main>
    <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="blog-post">
                    <h2 class="blog-post-title">@Model.Announcement.ProductName</h2>
                    <p class="blog-post-meta">@Model.Announcement.ProductCategory</p>
                    <p>@Model.Announcement.ProductDetails</p>
                </div>
            </div>
        </div>
    </section>

    


   <section class="comment-section">
    <div class="container">
        <h3>Comments</h3>
       
            @foreach (var comment in Model.Comments)
            {
            <div class="container mt-5">
                <div class="d-flex justify-content-center row">
                    <div class="col-md-12">
                        <div class="d-flex flex-column comment-section">
                            <div class="bg-white p-2">
                                <div class="d-flex flex-row user-info"><img class="rounded-circle" src="https://i.imgur.com/RpzrMR2.jpg" width="40">
                                    <div class="d-flex flex-column justify-content-start ml-2"><span class="d-block font-weight-bold name">Marry Andrews</span><span class="date text-black-50">Shared publicly - Jan 2020</span></div>
                                </div>
                                 <p class=" mt 2">
				                    @comment.Text
			                    </p>
                            </div>
                            <div class="bg-white">
                                <div class="d-flex flex-row fs-12">
                                        <div class="like p-2 cursor"><i class="fa fa-thumbs-o-up"></i><span class="ml-1">Like</span></div>
                                        <div class="like p-2 cursor"><i class="fa fa-commenting-o"></i><span class="ml-1">Comment</span></div>
                                        <div class="like p-2 cursor"><i class="fa fa-share"></i><span class="ml-1">Share</span></div>
                                </div>
                            </div>
               
                        </div>
                    </div>
                </div>
            </div>
            }
        
        
        <h4>Add a Comment</h4>
        <form action="@Url.Action("Add", "Comment")" method="post">
            @Html.AntiForgeryToken()

            <!-- Optional: Hidden field for announcement ID -->
            <input type="hidden" name="announcementId" value="@Model.Announcement.ProductId" />

            <div class="form-group">
                <label for="commentText">Comment:</label>
                <textarea id="commentText" name="commentText" class="form-control" rows="4" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit Comment</button>
        </form>
    </div>
</section>

</main>

<style>
   .blog-post {
        max-width: 100%; /* Adjust to match your desired card width */
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .blog-post-title {
        font-size: 28px;
        margin-bottom: 10px;
    }

    .blog-post-meta {
        font-size: 16px;
        color: #666;
        margin-bottom: 20px;
    }
    
    
    /* Adjust the width of the comment textarea */
    #commentText {
        width: 100%; /* Set to match the container's width */
    }
      .comment-section {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #ccc;
    }
    .date{font-size: 20px}
    .comment-text{font-size: 18px}
    .fs-12{font-size: 12px}
    .shadow-none{box-shadow: none}
    .name{color: #16A34A}
    .cursor:hover{color: blue}
    .cursor{cursor: pointer}
    .textarea{resize: none}
</style>




