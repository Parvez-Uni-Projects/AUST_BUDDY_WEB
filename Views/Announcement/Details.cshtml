   .blog-post {
        max-width: 100%; /* Adjust to match your desired card width */
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .blog-post-title {
        font-size: 28px;
        margin-bottom: 10px;
    }

    .blog-post-meta {
        font-size: 16px;
        color: #666;
        margin-bottom: 20px;
    }
    .comment-section {
        margin-top: 30px;
