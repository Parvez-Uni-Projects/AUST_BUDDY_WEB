



@model List<AUST_BUDDY_WEB.Models.PlaylistDetails>


<!-- Your HTML content for the "Course" view here -->

<section>
    <div class="container">
        <div class="row justify-content-center">
            @if (Session["Email"] != null)
            {
                foreach (var Playlists in Model)
                {
                    <div class="card course-card" style="width: 18rem;">
                        <img class="course-icon card-img-top" src="/Image/ic-course.png" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@Playlists.PlaylistTitle</h5>
                            <a href="@Url.Action("Watch", "Course", new { videos = @Playlists.VideosKey })" class="btn btn-primary">Explore</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
