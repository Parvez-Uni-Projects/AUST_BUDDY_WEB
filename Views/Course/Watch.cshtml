


@{
    ViewBag.Title = "Course";
}

<h1 class="display-5 fw-bold">Course Name</h1>

@model List<AUST_BUDDY_WEB.Models.YouTubeVideo>

<div id="accordion">
@if (Model.Count > 0)
{
    <section style="margin:5%">
        @foreach (var video in Model)
        {
                <div class="card">
                    <div class="card-header" id="headingTwo">
                        <h5 class="mb-0">
                        <button class="btn btn-link collapsed text-muted" data-toggle="collapse" data-target="#@video.VideoId" aria-expanded="false" aria-controls="@video.VideoId">
                        @video.Title
                        </button>
                         </h5>
                    </div>
                    <div id="@video.VideoId" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                        <div class="card-body">
                            <div class="video-container">
                                <iframe width="560" height="315" src="https://www.youtube.com/embed/@video.VideoId" frameborder="0" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>
        }
     </section>
}
else
{
    <p>No videos found.</p>
}

</div>