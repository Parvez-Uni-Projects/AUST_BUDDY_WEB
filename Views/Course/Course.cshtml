@{ ViewBag.Title = "Course"; } @model IEnumerable <AUST_BUDDY_WEB.Models.Course>
  <a href="@Url.Action("Choose", "Course" )" class="btn btn-primary btn-lg btn-block">Choose Semester</a>
  <a href="@Url.Action("Add", "Course" )" class="btn btn-primary btn-lg btn-block">Add Course</a>
  <section>
    <div class="container">
      <div class="row justify-content-center"> 
        @foreach (var course in Model) { <div class="card course-card" style="width: 18rem;">
          <img class="course-icon card-img-top" src="/Image/ic-course.png" alt="...">
          <div class="card-body">
            <h5 class="card-title">@course.CourseName</h5>
            <p class="card-text">Code: @course.CourseCode</p>
            <a href="@course.DriveLink" class="btn btn-primary">Explore</a>
          </div>
        </div> }
      </div>
    </div>
  </section>