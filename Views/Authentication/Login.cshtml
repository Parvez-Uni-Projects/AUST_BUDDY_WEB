@{ ViewBag.Title = "Login"; }

@model AUST_BUDDY_WEB.Models.UserLogin
<main>

    <!-- Section: Design Block -->
    <section class="text-center">
        <!-- Background image -->
        <div class="p-5 bg-image" style="
        background-image: url('https://user-images.githubusercontent.com/63257806/243441663-80730571-b83c-4544-9ee1-05f9697bb489.jpg');
        height: 300px;
        "></div>
        <!-- Background image -->

        <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -20px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
            <div class="card-body py-5 px-md-5">

                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <h1 class="fw-bold mb-5">Login</h1>
                        <h4 class="fw-bold mb-5">Login with your institutional email</h4>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()


                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                @Html.TextBoxFor(model => model.Email,new { @class = "form-control", style = "margin-top:2rem;" });
                                <label class="form-label" for="email" style="padding-top:1rem;">Email address</label>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", style = "margin-top:2rem;" })
                                <label class="form-label" for="password" style="padding-top:1rem;">Password</label>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>


                            <!-- 2 column grid layout for inline styling -->
                            <div class="row mb-4">
                                <div class="col d-flex justify-content-center">
                                    <!-- Checkbox -->

                                </div>

                                <div class="col">
                                    <!-- Simple link -->
                                    <a href="#!" style="color:#16A34A">Forgot password?</a>
                                </div>
                            </div>





                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4">
                                Login
                            </button>
                            <p class="mb-5">Don't have an account?  <a class="fw-bold " style="color:#16A34A ;" href="@Url.Action("registration", "Authentication")">Register </a> </p>
                            <a class="btn btn-default" href="https://accounts.google.com/o/oauth2/auth?client_id=1082440138378-ilf868uelbccv425d0b22j16fbhmu27b.apps.googleusercontent.com&redirect_uri=http://localhost:51065/Authentication/googleLoginCallback&scope=email%20profile&response_type=code">Google Log in</a>

                        }

                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- Section: Design Block -->
    <!--
                                    <a class="btn btn-default" href="https://accounts.google.com/o/oauth2/auth?client_id=1082440138378-ilf868uelbccv425d0b22j16fbhmu27b.apps.googleusercontent.com&redirect_uri=http://localhost:51065/Authentication/googleLoginCallback&scope=https://www.googleapis.com/auth/userinfo.profile&response_type=code&scope=email profile">Google Log in</a>

        -->


</main>
